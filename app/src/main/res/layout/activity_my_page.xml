<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_page_background"
    android:orientation="vertical"
    tools:context=".MyPageActivity">

    <View
        android:id="@+id/view23"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical"
        android:background="@drawable/my_page_bottomsheet_background">

        <View
            android:id="@+id/view26"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <View
                android:id="@+id/view30"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"
                android:orientation="vertical">

                <View
                    android:id="@+id/view36"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:background="@drawable/my_page_profile_background"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view39"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        tools:srcCompat="@tools:sample/avatars" />

                    <View
                        android:id="@+id/view41"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="사용자이름"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/button3"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:text="프로필 편집"
                            android:textAlignment="viewStart"
                            android:textColor="#6C6C6C"
                            android:textSize="8sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:gravity="center|start"
                            android:text="동네이름의\n칭호입니다"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view38"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:id="@+id/view31"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <View
                android:id="@+id/view32"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"
                android:background="@drawable/my_page_badge_background"
                android:orientation="vertical">

                <View
                    android:id="@+id/view43"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view66"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center|start"
                        android:text="사용자 이름님의 뱃지 목록"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view67"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view46"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ScrollView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <!--(뱃지 수 / 3개)만큼 만들기-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForFirstSignUp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForFirstSignUp"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:text="PortUs에 오신 걸 환영해요!" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForFirstRecommend"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForFirstRecommend"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:text="추천 고마워!" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForMaster"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForMaster"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:text="너 좀 짱인듯" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForMania"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForMania"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="너 완전 박사구나?" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForTenRecommend"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForTenRecommend"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="벌써 10번째 추천이야!" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForHundredRecommend"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForHundredRecommend"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="TextView" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForFirstVisit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForFirstVisit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="firstVisit" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForTenVisit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForTenVisit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="TenVisit" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForHundredVisit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForHundredVisit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="HundredVisit" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForFirstPhoto"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForFirstPhoto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="FirstPhoto" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForTenPhoto"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForTenPhoto"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:text="Tenphoto" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/badgeForHundredPhoto"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:srcCompat="@tools:sample/avatars" />

                                    <TextView
                                        android:id="@+id/labelForHundredPhoto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="hundredPhoto" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>

                    <View
                        android:id="@+id/view47"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <View
                    android:id="@+id/view45"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:id="@+id/view33"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/view28"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <View
                android:id="@+id/view34"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:background="@drawable/my_page_resturant_list_background"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/view53"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view76"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="center|start"
                            android:text="사용자 이름님이 Port!한 식당 리스트"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view77"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view56"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ScrollView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            tools:ignore="SpeakableTextPresentCheck">

                            <!--(뱃지 수 / 3개)만큼 만들기-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"></LinearLayout>
                            </LinearLayout>
                        </ScrollView>

                        <View
                            android:id="@+id/view57"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view55"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view35"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/view29"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />
    </LinearLayout>
</LinearLayout>